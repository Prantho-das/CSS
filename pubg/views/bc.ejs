<main x-data="pubg">
  <%- include('./partials/login.ejs') %>
    <%- include('./partials/facebook.ejs') %>
      <%- include('./partials/twitter.ejs') %>

        <div class="cb-counter md:px-6 px-2 py-8 bg-cover" style="background-image: url(./img/thum_kv1.jpg)">
          <div class="
            overlay
            mx-auto
            rounded-md
            bg-black bg-opacity-30
            flex
            justify-center
            items-center
            flex-col
            md:px-5
            px-3
            py-5
          ">
            <button type="submit" class="capitalize rounded-md py-2 px-3 bg-blue-400 font-medium mb-5">
              bc purchaes
            </button>
            <div class="
              flex
              w-full
              justify-between
              items-center
              md:px-3
              px-1.5
              py-2
              bg-blue-400
              rounded-md
            ">
              <h1 class="md:text-lg text-md capitalize">
                this reward will expire in time
              </h1>
              <button class="
                capitalize
                rounded-md
                md:py-2
                py-1.5
                md:px-3
                px-1.5
                bg-black
                font-black
              ">
                <span class="text-yellow-500 md:text-lg text-sm count_down my-1" x-ref="countdowntime">
                </span>
              </button>
            </div>
            <div class="cb_cards mt-5 w-full grid grid-cols-3 gap-3">
              <template x-for="data in $store.pubg_store.cb_data">
                <div class="
                  cb_card
                  border border-blue-400
                  bg-blue-400
                  rounded-lg
                  flex flex-col
                  overflow-hidden
                ">
                  <div class="
                    bc_coin
                    bg-blue-darkblue
                    flex
                    justify-center
                    items-center
                    sm:pt-3 sm:pb-2
                    py-1
                  ">
                    <img class="md:w-6 md:h-6 w-3 h-3" src="./img/pubglite_shop_smallicon.png" alt="" />
                    <h3 class="text-center ml-1 text-white sm:text-lg text-sm" x-text="data.point">
                      320
                    </h3>
                  </div>
                  <div class="cb-img">
                    <img src="./img/bc.jpg" class="w-full bg-center bg-cover" alt="" srcset="" />
                  </div>
                  <% if(locals.user.length <=0){ %>
                    <button @click="login_open()" class="
                    capitalize
                    collect_cb
                    rounded-md
                    sm:py-3 sm:px-3
                    p-1
                    sm:text-base
                    text-sm
                    bg-blue-400
                    font-semibold
                  ">
                      collect now
                    </button>
                    <% }else{%>
                      <a href="/verify" class="
                    capitalize
                    collect_cb
                    rounded-md
                    sm:py-3 sm:px-3
                    p-1
                    sm:text-base
                    text-sm
                    bg-blue-400
                    font-semibold
                    block
                    text-center
                  ">
                        collect now
                      </a>
                      <%}%>
                </div>
              </template>
            </div>
          </div>
        </div>
</main>
